				<RowDefinition Height="0.2*"/>
				<RowDefinition Height="0.2*"/>
			</Grid.RowDefinitions>


			<Grid Grid.ColumnSpan="3" MinHeight="30" >
				<Grid.ColumnDefinitions>
					<ColumnDefinition Width="*"/>
