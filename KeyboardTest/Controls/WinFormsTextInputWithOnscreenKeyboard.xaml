				DataContext="{Binding KeyboardViewModel}"
				x:Name="Keyboard" 
				Height="550"
				IsNumeric="{Binding Path=IsNumeric, ElementName=userControl, Mode=TwoWay}"
				LoadAutoCompleteData="{Binding Path=LoadAutoCompleteData, ElementName=userControl, Mode=TwoWay}"
				IsAutoCompleteMode="{Binding Path=IsAutoCompleteMode, ElementName=userControl, Mode=TwoWay}"
				AllowDecimalPoint="{Binding Path=AllowDecimalPoint, ElementName=userControl, Mode=TwoWay}"
				Value="{Binding Path=Value, ElementName=userControl, Mode=TwoWay}" />
		</Popup>
	</Grid>
</UserControl>